{
  "name": "watchtower",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "./packages/*",
    "./packages/api/types"
  ],
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "scripts": {
    "dev": "npm-run-all -p db:dev api:dev web:dev",
    "db:dev": "docker compose up -d",
    "api:dev": "JWT_SECRET=local npm run dev --workspace api",
    "web:dev": "npm run dev --workspace web"
  }
}
