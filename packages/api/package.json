{
  "name": "api",
  "main": "src/index.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js --external:express --external:cors",
    "start": "node dist/index.js",
    "db:migrate:up": "node-pg-migrate up --migrations-dir=db/migrations",
    "db:migrate:down": "node-pg-migrate down --migrations-dir=db/migrations",
    "db:migrate:create": "node-pg-migrate create --template-file-name=db/migration_template.sql --migrations-dir=db/migrations",
    "swagger:generate": "tsx swagger/generate.ts",
    "swagger:schemas:generate": "tsx swagger/schemas.ts"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "node-pg-migrate": "^7.5.2",
    "pg": "^8.12.0",
    "swagger-autogen": "^2.23.7",
    "swagger-ui-express": "^5.0.1",
    "typescript-json-schema": "^0.64.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@home-guardian/types": "^1.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.11",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/ws": "^8.5.11",
    "esbuild": "^0.23.0",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3"
  }
}
